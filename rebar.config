{port_env, [
    {"(linux|solaris|darwin)", "LD_RUN_PATH", "$LD_RUN_PATH:${PWD}/deps/libcouchbase/.libs:${PWD}/deps/libvbucket/.libs"},
    {"(linux|solaris|darwin)","DRV_LDFLAGS", "$DRV_LDFLAGS -lstdc++ -L${PWD}/deps/libcouchbase/.libs -lcouchbase -L${PWD}/deps/libvbucket/.libs -lvbucket"},
    {"(linux|solaris|darwin)","DRV_CFLAGS", "$DRV_CFLAGS -I${PWD}/deps/libcouchbase/include -fPIC"}
]}.

{pre_hooks,[{'compile',"make -C c_src"},
            {clean, "make -C c_src clean"}]}.

{port_specs, [{"priv/cberl_drv.so", ["c_src/*.c"]}]}.

{deps, [
    {'jiffy', "", {git, "https://github.com/davisp/jiffy.git", {branch, master}}}
]}.
