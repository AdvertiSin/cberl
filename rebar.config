{port_env, [
    {"DRV_LDFLAGS", "deps/libcouchbase/.libs/libcouchbase.a -shared $ERL_LDFLAGS"},
    {"darwin", "DRV_LDFLAGS", "-Wl,--whole-archive deps/libcouchbase/.libs/libcouchbase.a -Wl,--no-whole-archive -bundle -flat_namespace -undefined suppress $ERL_LDFLAGS"},
    {"DRV_CFLAGS", "-Ideps/libcouchbase/include/* -Ic_src -g -Wall -fPIC $ERL_CFLAGS"}
]}.

{pre_hooks,[{'compile',"make -C c_src"},
            {clean, "make -C c_src clean"}]}.

{port_specs, [{"priv/cberl_drv.so", ["c_src/*.c"]}]}.

{deps, [
    {'jiffy', "", {git, "https://github.com/davisp/jiffy.git", {branch, master}}}
]}.
