{pre_hooks,[{'get-deps',"make -C c_src"},
            {clean, "make -C c_src clean"}]}.

{port_env, [
    {"(linux|solaris)", "LD_RUN_PATH", "$LD_RUN_PATH:/usr/local/lib"},
    {"(linux|solaris)", "LDFLAGS", "$LDFLAGS -lstdc++ -L/usr/local/lib -lcouchbase"},
    {"(linux|solaris)", "CFLAGS", "$CFLAGS -I/usr/local/include/libcouchbase"}
]}.
